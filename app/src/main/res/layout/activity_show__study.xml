<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent" android:background="#eeebeb"
    android:paddingBottom="28dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp">
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/applogo"
                android:id="@+id/profileimg"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true">
                <LinearLayout
                    android:id="@+id/call_part"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp">
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn"
                        android:layout_marginBottom="3dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:src="@drawable/call"/>
                    </FrameLayout>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:textColor="#000000"
                android:text="전화하기"/>
                </LinearLayout>
            <LinearLayout
                android:id="@+id/email_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn"
                    android:layout_marginBottom="3dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:src="@drawable/envelope2"/>
                </FrameLayout>
            <TextView
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:textColor="#000000"
                android:text="이메일보내기"/>
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9dp">
        <TextView
            android:singleLine="true"
            android:textColor="#000000"
            android:id="@+id/title"
            android:paddingLeft="15dp"
            android:textSize="14dp"
            android:text = "제목을 입력해주세요."
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/register_title" />
        <LinearLayout
            android:id="@+id/type_part"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginBottom="9dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="대분류"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/type1"
                android:gravity="center"
                android:background="@drawable/register_title"
                android:layout_marginRight="5dp"/>
           <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
               android:gravity="center"
                android:textSize="14dp"
               android:text="소분류"
               android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/type2"
                android:layout_marginLeft="5dp"
                android:background="@drawable/register_title" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/member_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/location_part"
            android:layout_marginBottom="9dp">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/people"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/txt"
                    android:layout_toRightOf="@id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:text="최대"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_toRightOf="@+id/txt"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:id="@+id/member"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_small" />
                <TextView
                    android:layout_toRightOf="@+id/member"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:text="명"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/location_part"
            android:layout_below="@+id/type_part"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/location1"
                android:text="대분류"
                android:gravity="center"
                android:background="@drawable/register_title"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="#000000"
                android:text="소분류"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/location2"
                android:layout_marginLeft="5dp"
                android:background="@drawable/register_title" />
        </LinearLayout>
        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#000"
            android:layout_below="@+id/member_part"/>
        <TextView
            android:id="@+id/date"
            android:gravity="center"
            android:text="스터디 기간 추후 협의"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/register_title"
            android:layout_marginBottom="9dp"/>
        <TextView
            android:id="@+id/day"
            android:gravity="center"
            android:text="스터디 요일 추후 협의"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/register_title"
            android:layout_marginBottom="9dp"/>
        <TextView
            android:id="@+id/time"
            android:gravity="center"
            android:text="스터디 시간 추후 협의"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/register_title"
            android:layout_marginBottom="9dp"/>
    <TextView
        android:textColor="#000000"
        android:id="@+id/description"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="25dp"
        android:gravity="top"
        android:text="커리큘럼이 입력되지 않았습니다."
        android:textSize="14dp"
        android:paddingLeft="15dp"
        android:paddingTop="11dp"
        android:background="@drawable/register_memo"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="25dp">
        <Button
            android:id="@+id/btn_people"
            android:layout_width="121dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="현재참여인원"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_push_style"/>

        <Button
            android:id="@+id/btn_participate"
            android:layout_width="121dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="참여하기"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_push_style"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_margin="30dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="@drawable/side_nav_bar"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/commentimg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/custom_callout_balloon"/>
            <TextView
                android:layout_toRightOf="@+id/commentimg"
                android:id="@+id/comment_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="댓글"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
            <TextView
                android:layout_toRightOf="@+id/comment_title"
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/comment_refresh"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/refresh"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="댓글 더보기"
            android:visibility="gone"
            android:textSize="12sp"
            android:background="@drawable/register_year"/>
        <ListView
            android:listSelector="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandableListView"
            android:layout_gravity="center_horizontal" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <EditText
                android:id="@+id/edit_text_message"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity=""
                android:textSize="10sp"/>
            <Button
                android:id="@+id/button_send_message"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_push_style"
                android:text="SEND"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>