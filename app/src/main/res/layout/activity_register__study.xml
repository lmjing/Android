<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#eeebeb"
    android:paddingBottom="28dp">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp">
        <TextView
            android:id="@+id/des1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 필수 입력 항목입니다."
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_below="@+id/des1"
            android:singleLine="true"
            android:textColor="#302f2f"
            android:id="@+id/title"
            android:paddingLeft="15dp"
            android:textSize="14dp"
            android:hint = "제목을 입력해주세요."
            android:layout_marginBottom="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/register_title" />
        <LinearLayout
            android:id="@+id/type_part"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="9dp">
            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="#302f2f"
                android:layout_height="wrap_content"
                android:id="@+id/type_spinner1"
                android:background="@drawable/register_title"
                android:layout_marginRight="5dp"/>
           <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="#302f2f"
                android:layout_height="wrap_content"
                android:id="@+id/type_spinner2"
                android:layout_marginLeft="5dp"
                android:background="@drawable/register_title" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/member_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/location_part"
            android:layout_marginBottom="9dp">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/people"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/txt"
                    android:layout_toRightOf="@id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:text="최대"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_toRightOf="@+id/txt"
                    android:singleLine="true"
                    android:textColor="#302f2f"
                    android:id="@+id/member"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_small" />
                <TextView
                    android:layout_toRightOf="@+id/member"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:text="명"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/location_part"
            android:layout_below="@+id/type_part"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textColor="#302f2f"
                android:layout_height="wrap_content"
                android:id="@+id/location_spinner1"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/register_title"
                android:layout_marginRight="5dp"/>
            <Spinner
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="#302f2f"
                android:layout_height="wrap_content"
                android:id="@+id/location_spinner2"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:background="@drawable/register_title" />
        </LinearLayout>
        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#000"
            android:layout_below="@+id/member_part"/>
        <TextView
            android:id="@+id/des2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 선택 입력 항목입니다."
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/div"/>
        <RelativeLayout
            android:id="@+id/date_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_below="@+id/des2">
            <EditText
                android:singleLine="true"
                android:textColor="#302f2f"
                android:hint="시작날짜"
                android:id="@+id/startdate"
                android:focusableInTouchMode="false"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_year" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="4dp"
                android:textSize="20dp"
                android:text=" ~ "/>
            <EditText
                android:singleLine="true"
                android:textColor="#302f2f"
                android:id="@+id/enddate"
                android:focusableInTouchMode="false"
                android:textSize="14dp"
                android:hint="종료날짜"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_year"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/day_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/date_part"
            android:layout_marginBottom="9dp">
            <Button
                android:id="@+id/monday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2.5dp"
                android:text="월"
                android:textSize="14dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/register_small"/>
            <Button
                android:id="@+id/tuesday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="화"
                android:textSize="14dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/register_small"/>
            <Button
                android:id="@+id/wednesday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="수"
                android:textSize="14dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/register_small"/>
            <Button
                android:id="@+id/thursday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="목"
                android:textSize="14dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/register_small"/>
            <Button
                android:id="@+id/friday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="금"
                android:textSize="14dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/register_small"/>
            <Button
                android:id="@+id/saturday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="토"
                android:textSize="14dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/register_small"/>
            <Button
                android:id="@+id/sunday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="일"
                android:textSize="14dp"
                android:background="@drawable/register_small"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@+id/day_part"
            android:id="@+id/time_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp">
            <EditText
                android:singleLine="true"
                android:textColor="#302f2f"
                android:hint="시작시간"
                android:id="@+id/starttime"
                android:focusableInTouchMode="false"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_year" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="4dp"
                android:textSize="20dp"
                android:text=" ~ "/>
            <EditText
                android:singleLine="true"
                android:textColor="#302f2f"
                android:id="@+id/endtime"
                android:focusableInTouchMode="false"
                android:textSize="14dp"
                android:hint="종료시간"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_year"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    <EditText
        android:textColor="#302f2f"
        android:id="@+id/description"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="25dp"
        android:gravity="top"
        android:hint="커리큘럼을 입력해주세요."
        android:textSize="14dp"
        android:paddingLeft="15dp"
        android:paddingTop="11dp"
        android:background="@drawable/register_memo"/>
    <Button
        android:id="@+id/sendBtn"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="29dp"
        android:text="등록"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_push_style"/>
    </LinearLayout>
    </ScrollView>